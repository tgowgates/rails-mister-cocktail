

<div class="container">

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1462539405390-d0bdb635c7d1?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=7436b104d69a80e03757d8341f13665f&auto=format&fit=crop&w=1093&q=80');">
    <div class="banner-content">
      <h1>Welcome to Cocktail Mixer</h1>
      <p>The best amateur mixer site around</p>
      <%= link_to "Submit a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>

    </div>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card card-mid-size"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                 url('<%= cl_image_path cocktail.photo %>')">
          <!-- <div class="card-category"> <%= cocktail.name %> </div> -->
          <div class="card-description">
            <h2><%= link_to cocktail.name, cocktail, class: "banner-link" %></h2>
            <!-- <p>Very cool stuff, useful and smart</p> -->
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
